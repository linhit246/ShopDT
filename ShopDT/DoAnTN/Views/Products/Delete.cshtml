@model DoAnTN.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa sản phẩm</h2>

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <hr />
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductLabel">Thông tin</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </dt>
                    <dd>
                        <img src="@Url.Content("~/image/" + Model.ImagePath)" width="150px" height="150px" asp-append-version="true" />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.SellCost)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SellCost)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.LastUpdate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.LastUpdate)
                    </dd>
                    <dt>
                        Loại sản phẩm
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Xóa" class="btn btn-danger" /> |
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Products">Đóng</a>
                </form>
            </div>
        </div>
    </div>
</div>