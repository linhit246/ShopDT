@model IEnumerable<DoAnTN.Models.User>
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var list = ViewBag.Roles;
}
@foreach (var item in Model)
{
    <h2>Thông tin cá nhân</h2>
    <table>
        <tr>
            <td style="margin-right: 10px">Tài khoản: </td>
            <td>@item.Username</td>
            <td rowspan="5" style="margin-left: 20px">
            <img style="border-radius: 15px" src="@Url.Content("~/image/user/" + item.Avatar)" width="200px" height="200px" asp-append-version="true" />
            </td>
        </tr>
        <tr>
            <td style="margin-right: 10px">Họ và tên: </td>
            <td>@item.FirstName @item.LastName</td>
        </tr>
        <tr>
            <td style="margin-right: 10px">Giới tính: </td>
            <td>@item.Gender</td>
        </tr>
        <tr>
            <td style="margin-right: 10px">Ngày sinh: </td>
            <td>@String.Format("{0:dd/MM/yyyy}", item.BirthDay)</td>
        </tr>
        <tr>
            <td style="margin-right: 10px">Chức vụ: </td>
            <td>
                @foreach (var i in list)
                {
                    @i.Role.Name
                }
            </td>
        </tr>
    </table>
}