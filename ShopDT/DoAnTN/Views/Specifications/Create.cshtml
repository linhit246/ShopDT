@model DoAnTN.Models.Specification

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Thêm mới thông số kĩ thuật</h3>
<hr />
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addProductLabel">Thêm thông số kĩ thuật</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Storage" class="control-label"></label>
                    <input asp-for="Storage" class="form-control" />
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ram" class="control-label"></label>
                    <input asp-for="Ram" class="form-control" />
                    <span asp-validation-for="Ram" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fcamera" class="control-label"></label>
                    <input asp-for="Fcamera" class="form-control" />
                    <span asp-validation-for="Fcamera" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Scamera" class="control-label"></label>
                    <input asp-for="Scamera" class="form-control" />
                    <span asp-validation-for="Scamera" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cpu" class="control-label"></label>
                    <input asp-for="Cpu" class="form-control" />
                    <span asp-validation-for="Cpu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Resolution" class="control-label"></label>
                    <input asp-for="Resolution" class="form-control" />
                    <span asp-validation-for="Resolution" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Battery" class="control-label"></label>
                    <input asp-for="Battery" class="form-control" />
                    <span asp-validation-for="Battery" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Os" class="control-label"></label>
                    <input asp-for="Os" class="form-control" />
                    <span asp-validation-for="Os" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ScreenSize" class="control-label"></label>
                    <input asp-for="ScreenSize" class="form-control" />
                    <span asp-validation-for="ScreenSize" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SimNumber" class="control-label"></label>
                    <input asp-for="SimNumber" class="form-control" />
                    <span asp-validation-for="SimNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FastCharge" class="control-label"></label>
                    <input asp-for="FastCharge" class="form-control" />
                    <span asp-validation-for="FastCharge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sdcard" class="control-label"></label>
                    <input asp-for="Sdcard" class="form-control" />
                    <span asp-validation-for="Sdcard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Specifications">Đóng</a>
                </div>
            </form>
          </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
